{
  "version": 2,
  "builds": [
    {
      "src": "public/index.html",
      "use": "@vercel/static"
    },
    {
      "src": "public/css/styles.css",
      "use": "@vercel/static"
    },
    {
      "src": "public/js/scripts.js",
      "use": "@vercel/static"
    },
    {
      "src": "public/images/logo.png",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/public/index.html"
    }
  ],
  "headers": [
    {
      "source": "/(.*).(css|js|png|jpg|jpeg|gif|svg|woff|woff2|eot|ttf|otf|ico|json|html)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ],
  "public": "public"
}
